using System;

class Program {
  public static void Main (string[] args) 
  {
    double baseMaior;
    double baseMenor;
    double altura;
    double areaT;

    
    Console.WriteLine("Calcule a área do seu trapézio!");
    Console.WriteLine("Informe a base maior: ");
    baseMaior = Convert.ToDouble(Console.ReadLine());
    Console.WriteLine("Informe a base menor: ");
    baseMenor = Convert.ToDouble(Console.ReadLine());
    Console.WriteLine("Informe a altura: ");
    altura = Convert.ToDouble(Console.ReadLine());

    areaT = ((baseMaior + baseMenor) * altura)/2;

    Console.WriteLine("A área do seu trapézio é " + areaT);
    
  }
}
